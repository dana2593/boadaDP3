<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="boadaDP3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:boadaDP3.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="boadaDP3">

    <TabBar>
        <ShellContent
            Title="Nuevo Equipo"
            ContentTemplate="{DataTemplate local:NuevoEquipoPage}"
            Icon="add.png" />

        <ShellContent
            Title="Lista Equipos"
            ContentTemplate="{DataTemplate local:ListaEquiposPage}"
            Icon="list.png" />

        <ShellContent
            Title="Logs"
            ContentTemplate="{DataTemplate local:LogsPage}"
            Icon="document.png" />
    </TabBar>

</Shell>